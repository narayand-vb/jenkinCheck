pipeline {
    agent any
    // tools {nodejs "node"}
    environment {
    registry = "narayandvb/jenkin-docker"
    dockerImage = ''
    registryCredential = 'dockerCred'
  }
    stages{
        stage("fetching"){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/user']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/narayand-vb/jenkinCheck']]])
            }
        }
        stage("build"){
            steps{
                bat "npm install"
            }
        }
        stage('image') {
      steps {
        script {
          dockerImage = docker.build registry
          docker.withRegistry('', registryCredential) {
            dockerImage.push()
          }
          }
      }
        }
          stage('run') {
      steps {
        script {
          dockerImage = docker.image('narayandvb/jenkin-docker')
          dockerImage.run("-p 3000:3000 --rm --name firstreact")
        }
      }
    }
    }
    
}